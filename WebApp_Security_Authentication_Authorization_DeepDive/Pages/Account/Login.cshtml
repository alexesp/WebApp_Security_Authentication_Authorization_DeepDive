@page
@model WebApp_Security_Authentication_Authorization_DeepDive.Pages.Account.LoginModel
@{
}

<div class="container border" style="padding:20px">
	<form method="post">
		<div class="form-group row">
			<div class="col-2">
				<label asp-for="Credential.Name"></label>
			</div>
			<div class="col-5">
				<input type="text" asp-for="Credential.Name" class="form-control"></input>
			</div>
		</div>

		<div class="form-group row">
			<div class="col-2">
				<label asp-for="Credential.Password"></label>
			</div>
			<div class="col-5">
				<input type="password" asp-for="Credential.Password" class="form-control"></input>
			</div>
		</div>
	</form>
</div>
